<header class="main-header">
    <div class="container">
        <div class="logo">
            <a href="/"><h1>ajenaration</h1></a>
        </div>
        
        <!-- Desktop Navigation -->
        <nav class="main-nav desktop-nav">
            <ul>
                <li><a href="/" class="<%= active === 'home' ? 'active' : '' %>">Home</a></li>
                <li><a href="/about" class="<%= active === 'about' ? 'active' : '' %>">About</a></li>
                <li><a href="/projects" class="<%= active === 'projects' ? 'active' : '' %>">Projects</a></li>
                <li><a href="/blog" class="<%= active === 'blog' ? 'active' : '' %>">Blog</a></li>
                <li><a href="/contact" class="<%= active === 'contact' ? 'active' : '' %>">Contact</a></li>
            </ul>
        </nav>

          <div class="nav-actions">
              <a href="/ayana-n-resume.pdf" class="btn resume-btn" target="_blank" rel="noopener">
                  Resume
              </a>

              <button class="hamburger-btn" aria-label="Toggle Menu">
                  <i class="fas fa-bars"></i>
              </button>
          </div>
    </div>

    <!-- Mobile Navigation Dropdown -->
    <div class="mobile-nav">
        <ul>
            <li><a href="/" class="<%= active === 'home' ? 'active' : '' %>">Home</a></li>
            <li><a href="/about" class="<%= active === 'about' ? 'active' : '' %>">About</a></li>
            <li><a href="/projects" class="<%= active === 'projects' ? 'active' : '' %>">Projects</a></li>
            <li><a href="/blog" class="<%= active === 'blog' ? 'active' : '' %>">Blog</a></li>
            <li><a href="/contact" class="<%= active === 'contact' ? 'active' : '' %>">Contact</a></li>
            <li class="mobile-only"><a href="/ayana-n-resume.pdf" download>Download Resume</a></li>
        </ul>
    </div>

    <script>
        const hamburger = document.querySelector('.hamburger-btn');
        const mobileNav = document.querySelector('.mobile-nav');
        const icon = hamburger.querySelector('i');

        hamburger.addEventListener('click', () => {
            mobileNav.classList.toggle('active');
            icon.classList.toggle('fa-bars');
            icon.classList.toggle('fa-times');
        });
    </script>
</header>